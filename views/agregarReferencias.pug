head
  title Crear Examen
  include includes/header
  
body
  block content
    .container
      .row-justify-content-center
        // Tercera columna - Formulario de Valores de Referencia
        .col-md-8
          h1.mb-8.link-custom Valores de Referencia
          br
          p.link-custom ID del Examen: #{examdet.examenId}
          p.link-custom ID de Determinacion: #{examdet.determinacionId}
          p.link-custom ID : #{examdet.id}
          form.form-group(action="/agregarValoresReferencia", method="post")
            label(for="rango_min" class="link-custom") Rango Mínimo
            input.form-control(type="text", name="rango_min", required)

            label(for="rango_max" class="link-custom") Rango Máximo
            input.form-control(type="text", name="rango_max", required)

            label(for="descripcion" class="link-custom") Descripcion
            input.form-control(type="text", name="descripcion", required)

            input(type="hidden", name="determinacionId", value=examdet.determinacionId)
            input(type="hidden", name="examenId", value=examdet.examenId)
            input(type="hidden", name="idexd", value=examdet.id)
            input(type="hidden", name="examdet", value=examdet)

            button.btn.btn-custom(type="submit") Guardar Valor de Referencia

        button.btn.btn-custom(type="submit") Finalizar
