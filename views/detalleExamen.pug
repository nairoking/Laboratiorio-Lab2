extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h2.text-center.mb-4 Detalles del Examen
        p Nombre del Examen: #{examen.nombre}

        h3 Determinaciones
            ul
                each examenDeterminacion in examen.ExamenDeterminacion
                    li= examenDeterminacion.Determinacion.nombre

        h3 Valores de Referencia
        ul
          each valorReferencia in examen.ValoresReferencias
            li Rango: #{valorReferencia.rango_min} - #{valorReferencia.rango_max}
